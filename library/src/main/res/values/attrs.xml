    <attr name="primaryTextColour" format="color"/>
    <attr name="secondaryTextColour" format="color"/>
    <attr name="backgroundColour" format="color"/>
    <attr name="focalColour" format="color"/>
    <attr name="focalRadius" format="dimension"/>
